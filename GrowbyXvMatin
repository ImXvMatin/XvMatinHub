-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local AutoCollectButton = Instance.new("TextButton")
local EventButton = Instance.new("TextButton")
local GearButton = Instance.new("TextButton")
local CloseButton = Instance.new("TextButton")

ScreenGui.Name = "XvMatinGUI"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Name = "MainFrame"
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
Frame.Size = UDim2.new(0, 300, 0, 200)
Frame.Active = true
Frame.Draggable = true

Title.Name = "Title"
Title.Parent = Frame
Title.Text = "Script By XvMatin"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20

-- Auto Collect Fruits
AutoCollectButton.Name = "AutoCollect"
AutoCollectButton.Parent = Frame
AutoCollectButton.Position = UDim2.new(0, 10, 0, 40)
AutoCollectButton.Size = UDim2.new(0, 280, 0, 30)
AutoCollectButton.Text = "Auto Collect Fruits"
AutoCollectButton.MouseButton1Click:Connect(function()
    for _,v in pairs(workspace:GetDescendants()) do
        if v.Name == "Fruit" and v:IsA("TouchTransmitter") then
            firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, v.Parent, 0)
            firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, v.Parent, 1)
        end
    end
end)

-- Teleport to Event Area
EventButton.Name = "EventTeleport"
EventButton.Parent = Frame
EventButton.Position = UDim2.new(0, 10, 0, 80)
EventButton.Size = UDim2.new(0, 130, 0, 30)
EventButton.Text = "Event"
EventButton.MouseButton1Click:Connect(function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(workspace.EventArea.Position)
end)

-- Teleport to Gear Shop
GearButton.Name = "GearTeleport"
GearButton.Parent = Frame
GearButton.Position = UDim2.new(0, 160, 0, 80)
GearButton.Size = UDim2.new(0, 130, 0, 30)
GearButton.Text = "Gear Shop"
GearButton.MouseButton1Click:Connect(function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(workspace.GearShop.Position)
end)

-- Close GUI
CloseButton.Name = "Close"
CloseButton.Parent = Frame
CloseButton.Position = UDim2.new(0, 10, 0, 120)
CloseButton.Size = UDim2.new(0, 280, 0, 30)
CloseButton.Text = "Close GUI"
CloseButton.MouseButton1Click:Connect(function()
    Frame.Visible = false
end)

-- ESP for Eggs (Show pet name inside)
for _,egg in pairs(workspace:GetDescendants()) do
    if egg.Name == "Egg" and egg:FindFirstChild("PetInside") then
        local billboard = Instance.new("BillboardGui", egg)
        billboard.Size = UDim2.new(0, 100, 0, 50)
        billboard.Adornee = egg
        billboard.AlwaysOnTop = true

        local label = Instance.new("TextLabel", billboard)
        label.Size = UDim2.new(1, 0, 1, 0)
        label.BackgroundTransparency = 1
        label.TextColor3 = Color3.fromRGB(255, 255, 0)
        label.Text = "Pet: " .. egg.PetInside.Value
        label.TextScaled = true
    end
end
